<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!--  Background color with rounded corners  -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ff5d00"/>
                    <corners android:radius="5dp"/>
                    <size android:width="20dp" android:height="20dp"/>
                </shape>
            </item>
            <!--  White plus icon in the center  -->
            <item android:gravity="center">
                <shape android:shape="rectangle">
                    <size android:width="3dp" android:height="10dp"/>
                    <solid android:color="#FFFFFF"/>
                    <padding android:top="8dp" android:bottom="8dp"/>
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="rectangle">
                    <size android:width="10dp" android:height="3dp"/>
                    <solid android:color="#FFFFFF"/>
                    <padding android:left="8dp" android:right="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>